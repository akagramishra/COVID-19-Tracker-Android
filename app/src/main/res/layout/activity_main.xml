<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimge"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/R1"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="155dp"
            android:layout_height="81dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/corona" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/R1">

        <Button
            android:id="@+id/Ab"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round"
            android:text="About-us"
            android:textColor="@color/White"/>

        <Button
            android:id="@+id/abcorona"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/bg_round"
            android:text="About Corona"
            android:textColor="@color/White"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/relativelayout"
        android:id="@+id/linearlayout"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/prevention"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_round"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="Prevention"
            android:textColor="@color/White"/>

        <Button
            android:id="@+id/cases"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_round"
            android:text="Cases India"
            android:textColor="@color/White"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/imp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/bg_round"
            android:text="Imp/News"
            android:textColor="@color/White"/>

        <Button
            android:id="@+id/world"
            android:layout_width="120dp"
            android:layout_marginTop="14dp"
            android:layout_height="120dp"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round"
            android:text="Cases world"
            android:textColor="@color/White"/>
    </RelativeLayout>

   


</RelativeLayout>